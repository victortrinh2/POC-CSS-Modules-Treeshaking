{
    "extends": "@workleap/typescript-configs/web-application.json",
    "compilerOptions": {
        "paths": {
            "@poc-css/components": ["../../packages/components/src/index.ts"],
            "@poc-css/components/index.css": ["../../packages/components/src/index.css"],
            "@poc-css/federation-runtime": ["../../packages/federation-runtime/src/index.ts"],
            "@poc-css/http": ["../../packages/http/src/index.ts"],
            "@poc-css/msw": ["../../packages/msw/src/index.ts"]
        }
    },
    "include": [
        "src",
        "types",
        /**
         * Since we are using module augmentation in the packages, and we use tsconfig paths to resolve the packages
         * from this repo, we need to include the types folder in the packages to make sure the types are included
         * in the build.
        */
        "../../packages/**/types"
    ],
    "exclude": ["dist", "node_modules"]
}
