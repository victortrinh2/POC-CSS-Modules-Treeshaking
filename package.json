{
    "name": "@poc-css/monorepo",
    "private": true,
    "type": "module",
    "scripts": {
        "auth": "pnpm dlx vsts-npm-auth -Config .npmrc -F",
        "build": "pnpm -r --parallel build",
        "dev-packages": "pnpm --filter \"./packages/*\" -r --parallel dev",
        "build-packages": "pnpm --filter \"./packages/*\" -r --parallel build",
        "dev-app": "pnpm --filter \"./apps/*\" -r --parallel dev",
        "dev-app-msw": "pnpm --filter \"./apps/*\" -r --parallel dev-msw",
        "build-app": "pnpm --filter \"./apps/*\" -r build",
        "serve-app": "pnpm --filter \"./apps/*\" -r --parallel serve-app",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build",
        "test": "jest",
        "lint": "pnpm run \"/^lint:.*/\"",
        "lint:eslint": "eslint . --max-warnings=0 --cache --cache-location node_modules/.cache/eslint",
        "lint:stylelint": "stylelint \"**/*.css\" --max-warnings=0 --cache --cache-location node_modules/.cache/stylelint",
        "lint:knip": "knip",
        "lint:installed-check": "installed-check --engine-check --version-check",
        "lint:types": "pnpm -r --parallel --include-workspace-root exec tsc",
        "clean": "pnpm -r --parallel --include-workspace-root exec pnpm dlx rimraf dist node_modules/.cache",
        "reset": "pnpm clean && pnpm reset:modules",
        "reset:modules": "pnpm -r --parallel --include-workspace-root exec pnpm dlx rimraf node_modules pnpm-lock.yaml",
        "chromatic": "chromatic --only-changed",
        "list-outdated-deps": "pnpm outdated -r --format list !eslint !@types/eslint",
        "update-outdated-deps": "pnpm update -r --latest !eslint !@types/eslint"
    },
    "devDependencies": {
        "@types/node": "22.5.5",
        "@typescript-eslint/parser": "8.5.0",
        "@workleap/eslint-plugin": "3.2.2",
        "@workleap/typescript-configs": "3.0.2",
        "chromatic": "11.10.2",
        "eslint": "8.57.0",
        "installed-check": "9.3.0",
        "jest": "29.7.0",
        "knip": "5.30.2",
        "netlify-cli": "17.36.0",
        "prettier": "3.3.3",
        "storybook": "8.3.0",
        "stylelint": "16.9.0",
        "typescript": "5.6.2"
    },
    "engines": {
        "node": ">=20.0.0",
        "pnpm": ">=9"
    },
    "packageManager": "pnpm@9.5.0+sha512.140036830124618d624a2187b50d04289d5a087f326c9edfc0ccd733d76c4f52c3a313d4fc148794a2a9d81553016004e6742e8cf850670268a7387fc220c903"
}
